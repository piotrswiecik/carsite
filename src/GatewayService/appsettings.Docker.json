{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "AllowedHosts": "*",
  "IdentityService": {
    "Authority": "http://identity-svc"
  },
  "ReverseProxy": {
    "Clusters": {
      "auctionsCluster": {
        "Destinations": {
          "auctionsCluster/api": {
            "Address": "http://auction-svc"
          }
        }
      },
      "searchCluster": {
        "Destinations": {
          "searchCluster/api": {
            "Address": "http://search-svc"
          }
        }
      },
      "bidsCluster": {
        "Destinations": {
          "bidsCluster/api": {
            "Address": "http://bid-svc"
          }
        }
      }
    }
  }
}
